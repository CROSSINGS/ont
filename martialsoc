@prefix : <http://crossings.github.io/term/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix dul: <http://www.ontologydesignpatterns.org/ont/dul/DUL.owl#> .
@prefix mil: <http://rdf.muninn-project.org/ontologies/military#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<http://crossings.github.io/ont/martialsoc> rdf:type owl:Ontology ;
    dct:title   "The Martial Arts ontology: Social framework"    ;
                                                dct:creator   <https://orcid.org/0000-0002-9272-908X>    ;
                                            dct:description "Ontology module that covers the aspects related to how the notions of martial arts to are taught, spread or otherwise communicated to others. This is especially related to pedagogical aspects of teaching, learning and evaluating, but also to such things as dissemination and competition. However, aspects that are akin to sports disciplines (such as the organisation of competitions) will not be covered."@en .

:adoptsSyllabus a  owl:ObjectProperty
    ; rdfs:label "adopts syllabus"@en
    ; rdfs:range :Syllabus
.

:taughtAt a owl:ObjectProperty
    ; rdfs:label "taught at"@en
    ; rdfs:domain :StylingSystem
    ; rdfs:range :MartialArtsCommunity
.

:acquiredStatus a  owl:ObjectProperty
    ; rdfs:label "acquired status"@en
    ; rdfs:domain dul:Person
    ; rdfs:range :StatusAcquisition
.

:acquisitionHasStatus a  owl:ObjectProperty
    ; rdfs:label "acquisition has status"@en
    ; dct:description "the status (e.g. salutation, title) that is object of the acquisition."@en
    ; rdfs:domain :StatusAcquisition
    ; rdfs:range :Status
.

:acquisitionHasObject a  owl:ObjectProperty
    ; rdfs:label "acquisition has object"@en
    ; dct:description "the context of the acquisition, such as a style or art."@en
    ; rdfs:domain :StatusAcquisition
    ; rdfs:range :StylingSystem
.

:MartialArtsCommunity a owl:Class
    ; rdfs:label "martial arts community"@en
    ; dct:description "An endurant, collective agent whose members share the practitioning of a martial art. It can be officially sanctioned, such as a school or sports federation, or otherwise, such as a clan or sect."@en
    ; rdfs:subClassOf dul:CollectiveAgent
.

###  http://semanticweb.org/ont/martialmotion#GradingSystem
:GradingSystem rdf:type owl:Class ;
               rdfs:subClassOf dul:Norm ;
               rdfs:label "grading system"@en .

:Status rdf:type owl:Class ;
               rdfs:label "status"@en ;
               dct:description "a denomination, earned or acquired, associated to the social fabric of martian arts transmission, such as that of Sensei or Shifu. Note that is is not necessarily a qualification, as in non-normed contexts it may not be awarded."@en
.

:StatusAcquisition rdf:type owl:Class ;
               rdfs:subClassOf dul:Event ;			
               rdfs:label "status acquisition"@en ;
               dct:description "the event whereby a status s acquired."@en
.

:Syllabus rdf:type owl:Class ;
               rdfs:subClassOf dul:Norm ;
               rdfs:label "syllabus"@en
.

###  http://semanticweb.org/ont/martialmotion#isGradedUsing
:isGradedUsing rdf:type owl:ObjectProperty ;
               rdfs:domain :GradingSystem ;
               rdfs:comment "Applies to a styling system, or to a spatio-temporally indexed situation for it (e.g. the way belt colors/strips were being assigned to kyus in karate by a certain federation during a certain period)"@en ;
               rdfs:label "is graded using"@en .
               

